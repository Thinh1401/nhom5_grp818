@{
    @model Product

    <h2>Edit Product</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Price">Price:</label>
            <input asp-for="Price" />
        </div>
        <button type="submit">Save Changes</button>
    </form>

}
