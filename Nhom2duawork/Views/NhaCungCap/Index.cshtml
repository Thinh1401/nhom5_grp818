@{
    <!-- Views/NhaCungCap/Index.cshtml -->
    @model List<NhaCungCap>

    <h2 class="mt-4">Nhà Cung Cấp Management</h2>

    <table class="table table-striped">
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
        <thead>
            <tr>
                <th>ID</th>
                <th>Ten Nha Cung Cap</th>
                <!-- Thêm các thẻ th khác nếu có thêm thuộc tính cho nhà cung cấp -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nhaCungCap in Model)
            {
                <tr>
                    <td>@nhaCungCap.Id</td>
                    <td>@nhaCungCap.TenNhaCungCap</td>
                    <!-- Thêm các cột khác nếu có thêm thuộc tính cho nhà cung cấp -->
                    <td>
                        <a asp-action="Details" asp-route-id="@nhaCungCap.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@nhaCungCap.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@nhaCungCap.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
